{{#if label}}
    <label {{bind-attr for=inputId}}>
        {{label}}

        {{#if optional}}
            <small class="text-info">Optional</small>
        {{/if}}

        {{#if required}}
            <small class="text-danger">Required</small>
        {{/if}}
    </label>
{{/if}}

<input {{bind-attr disabled=disabled id=inputId}} class="form-control" type="hidden" />

{{#if helpText}}
    <p class="help-block">{{helpText}}</p>
{{/if}}