<button class="btn btn-default dropdown-toggle" data-toggle="dropdown" type="button">
    {{#if view.label}}
        {{view.label}}
        <span {{bind-attr class=iconClass}}></span>
    {{else}}
        {{yield}}
    {{/if}}
</button>

<ul {{bind-attr class=":dropdown-menu alignRight:dropdown-menu-right"}} role="menu">
    {{yield}}
</ul>
