<button class="btn btn-default dropdown-toggle" data-toggle="dropdown" type="button">
    {{#if view.label}}
        {{view.label}}
        <span {{bind-attr class=iconClass}}></span>
    {{else}}
        {{yield}}
    {{/if}}
</button>

<ul class="dropdown-menu" role="menu">
    {{#each option in view.content}}
        {{#if option.label}}
            <li class="presentation">
                <a {{action "click" option.action}} role="menuitem" tab-index="-1">{{option.label}}</a>
            </li>
        {{else}}
            <li class="divider"></li>
        {{/if}}
    {{/each}}
</ul>
