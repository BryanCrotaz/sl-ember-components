        <tr>
            <td><a href="#sl-button">sl-button</a></td>
            <td>{{sl-progressbar label=true theme="success" value="100"}}</td>
        </tr>
        <tr>
            <td><a href="#sl-calendar">sl-calendar</a></td>
            <td>{{sl-progressbar label=true theme="danger" value="0"}}</td>
        </tr>
        <tr>
            <td><a href="#sl-chart">sl-chart</a></td>
            <td>{{sl-progressbar label=true theme="danger" value="0"}}</td>
        </tr>
        <tr>
            <td><a href="#sl-checkbox">sl-checkbox</a></td>
            <td>{{sl-progressbar label=true theme="success" value="100"}}</td>
        </tr>
        <tr>
            <td><a href="#sl-datepicker">sl-datepicker</a></td>
            <td>{{sl-progressbar label=true theme="success" value="100"}}</td>
        </tr>
        <tr>
            <td><a href="#sl-dropbutton">sl-dropbutton</a></td>
            <td>{{sl-progressbar label=true theme="success" value="100"}}</td>
        </tr>
        <tr>
            <td><a href="#sl-grid">sl-grid</a></td>
            <td>{{sl-progressbar label=true theme="danger" value="20"}}</td>
        </tr>
        <tr>
            <td><a href="#sl-input">sl-input</a></td>
            <td>{{sl-progressbar label=true theme="success" value="100"}}</td>
        </tr>
        <tr>
            <td><a href="#sl-label">sl-label</a></td>
            <td>{{sl-progressbar label=true theme="success" value="100"}}</td>
        </tr>
        <tr>
            <td><a href="#sl-progressbar">sl-progressbar</a></td>
            <td>{{sl-progressbar label=true theme="success" value="100"}}</td>
        </tr>
        <tr>
            <td><a href="#sl-radiogroup">sl-radiogroup</a></td>
            <td>{{sl-progressbar label=true theme="success" value="100"}}</td>
